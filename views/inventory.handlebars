<div class="inventory" ng-controller="inventoryController" ng-init="user='{{user.name}}'; secret='{{user.secret}}'; func='{{user.deleteItem}}'">

	<div class="wrapper">
		<div class="add-btn"><a class="btn btn-default" href="/add" role="button">Add +</a></div>
		<div class="search-panel">
			<label for="search">Search:</label>
			<input type="text" ng-model="test" name="search">
		</div>
		<table class="table-data">
			<thead class="table-data__thead">
				<tr class="table-data__tr table-data__tr--head">
					<th class="table-data__th">Name</th>
					<th class="table-data__th">Brand</th>
					<th class="table-data__th">Quantity</th>
					<th class="table-data__th">Options</th>
				</tr>
			</thead>
			<tbody class="table-data__tbody">
				<tr class="table-data__tr" ng-repeat="x in inventory | filter:test | orderBy:'item'">
					<td class="table-data__td">
						<[x.item]>
					</td>
					<td class="table-data__td">
						<[x.brand]>
					</td>
					<td class="table-data__td">
						<[x.quantity]>
					</td>
					<td class="table-data__td table-data__icons">
						<div class="table-data__edit-icon"></div>
						<div class="table-data__delete-icon" onClick="deleteItem()"></div>
						<div></div>
					</td>
				</tr>
			</tbody>
		</table>
	</div>
</div>